<%- include("partials/header.ejs") %>

<h1>New Post</h1>

<%# this is a TEST %>
<form action="/new-post" method="POST" enctype="multipart/form-data">
  <%# Title of Post %>
  <input name="title" type="text" class="feedback-input" placeholder="Title" />
  
  <%# Image of Post %>
  <div class="input-container">
    <label for="image">Image</label>
    <input name="image" type="file" accept="image/png, image/jpeg, image/jpg" placeholder="Image" required />
  </div>

  <%# Content of Post %>
  <textarea name="content" class="feedback-input" placeholder="Content"></textarea>
  <input type="submit" value="POST" />
</form>

